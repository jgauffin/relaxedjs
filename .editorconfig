[*]
insert_final_newline = true
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 100

[*.{js,ts}]
quote_type = single
curly_bracket_next_line = false
spaces_around_brackets = inside
indent_brace_style = BSD KNF

[*.{json,yml}]
indent_size = 2

[composer.json]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
